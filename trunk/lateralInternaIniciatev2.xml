	<Require feature="dynamic-height"/>   
	<Require feature="setprefs" />   
  </ModulePrefs>

<UserPref name="title" display_name="Título Bloque:" default_value="" required="true"/>
<UserPref name="titleiniciate" display_name="Título sección íniciate:" default_value="" required="true"/>
<UserPref name="urliniciate" display_name="Url sección íniciate:" default_value="" required="true"/>   
 <Content type="html">
    <![CDATA[
	<script src="https://www.google.com/jsapi" type="text/javascript"></script>
	
	<style type="text/css">
	  /* @group fonts */


@font-face {
	font-family: 'BBVA Web Book';
	src:url('https://bbvaportaldeayuda.googlecode.com/svn/trunk/fonts/web-book/web-book.eot');
	src:url('https://bbvaportaldeayuda.googlecode.com/svn/trunk/fonts/web-book/web-book.eot?iefix') format("embedded-opentype"),
		url('https://bbvaportaldeayuda.googlecode.com/svn/trunk/fonts/web-book/web-book.woff') format("woff"),
		url('https://bbvaportaldeayuda.googlecode.com/svn/trunk/fonts/web-book/web-book.ttf') format("truetype"),
		url('https://bbvaportaldeayuda.googlecode.com/svn/trunk/fonts/web-book/web-book.svg#BBVA Web Book') format("svg");
	font-style: normal;
	font-weight: normal;
}



/* @end */
	
.titulo{
						border-bottom: 1px solid  #DDE3EA;
						background: #ffffff;
						background: -moz-linear-gradient(top,  #ffffff 0%, #f5f7f8 100%);
						background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ffffff), color-stop(100%,#f5f7f8));
						background: -webkit-linear-gradient(top,  #ffffff 0%,#f5f7f8 100%);
						background: -o-linear-gradient(top,  #ffffff 0%,#f5f7f8 100%);
						background: -ms-linear-gradient(top,  #ffffff 0%,#f5f7f8 100%);
						background: linear-gradient(to bottom,  #ffffff 0%,#f5f7f8 100%);
						filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#f5f7f8',GradientType=0 );
						font: 16px BBVA Web Book;
						color: #333333;
						padding-left: 18px;
						padding-left: 18px;
						padding-top: 14px;
						padding-bottom: 15px;
					}
					.caja{
						border: 1px solid #DDE3EA;
            border-radius: 2px;
            -ms-border-radius: 2px;
            -moz-border-radius: 2px;
            -webkit-border-radius: 2px;
            -khtml-border-radius: 2px;
            width: 298px;
            clear: both;
			margin-top:15px;
					}
					ul{
						padding-left: 19px;
						padding-right: 19px;
						margin: 0;
					}
					ul li{
						list-style: none;
						border-bottom: 1px solid #DDE3EA;
						padding-bottom: 12px;
						padding-top: 17px;
					}
          ul li:last-child{
						border: 0;
						padding-bottom: 11px;
						padding-top: 17px;
					}     
					ul li a{
            padding-left: 2px;
						vertical-align: 3px;
						text-decoration: none;
            font: 12px Arial;
            font-weight: bold;
						color: #0073C9;
					}  
	
	</style>
<script type="text/javascript" src="https://bbvaportaldeayuda.googlecode.com/svn/trunk/bbcode2html.js"></script>

<div id="content_div" class="caja"></div>

  <script type="text/javascript">
  
	 var gadgetHelper = null;
	 var prefs = new gadgets.Prefs();
	 var title = prefs.getString("title");
	 var titleiniciate = prefs.getString("titleiniciate");
	 var urliniciate = prefs.getString("urliniciate"); 
	 var html = "";
	 html +='<div class=\"titulo\">' + title + '</div>';
	 html +='<ul id=\"botonera\">'; 
	 html += "<li><a target='_parent' href='"+urliniciate+"'>"+titleiniciate+"</a></li>";
	 html +='</ul>'; 
	 document.getElementById('content_div').innerHTML += html;
	 
	  
  </script>
   
    ]]>
	</Content>
  <Content type="html" view="configuration" preferred_height="480">
  
  <![CDATA[
	<style type="text/css">
	    input#VarrootSite {
        	width: 300px;
		}
		table td {
			color: #000;
			font-size: 11px;
			font-weight: bold;
		}
	</style>
	<table width="100%" border="0" id="tablaconfig">  
		<tr>       
        	<td>
            	Título - Bloque: <input type="text" size="100" id="title" value="__UP_title__" onchange="registra('title')"/>                   
			</td>
		</tr>
		<tr>       
			<td>
				Título sección íniciate: <input type="text" size="100" id="titleiniciate" value="__UP_titleiniciate__" onchange="registra('titleiniciate')"/>                   
			</td>
		</tr>
		<tr>       
			<td>
				Url sección íniciate: <input type="text" size="100" id="urliniciate" value="__UP_urliniciate__" onchange="registra('urliniciate')"/>
			</td>
		</tr>
		
	</table>	

    <script type="text/javascript">           
		//Get userprefs
		var prefs = new gadgets.Prefs();           
		function registra(variable)
		{	
			prefs.set(variable,document.getElementById(variable).value);
		} 
		gadgets.window.adjustHeight();
    </script>   	
 ]]>	
  </Content>
  
